#!/usr/bin/env python
# -*- coding: utf-8 -*-
"""Extract an artifact document from an APK infos."""

import argparse
import sys

import simplejson as json

from servalx import artifacts

PARSER = argparse.ArgumentParser(description=__doc__)
PARSER.add_argument('apkinfos', type=argparse.FileType('r'))


def apkartifact(apkinfos):
    return artifacts.from_apkinfos(apkinfos)


if __name__ == '__main__':
    args = PARSER.parse_args()

    infos = json.load(args.apkinfos)
    index = apkartifact(infos)

    json.dump(index, sys.stdout)
