#!/usr/bin/env python
# -*- coding: utf-8 -*-
"""Extract and print the certificate of an APK file."""

import argparse
import simplejson as json
import sys

from servalx import apk as Apk

PARSER = argparse.ArgumentParser(description=__doc__)
PARSER.add_argument('apkfile', type=argparse.FileType('r'))


def apkcert(apkfile):
    apk = Apk.APK(apkfile.read())

    return apk.extract_from_developer_certificate()


if __name__ == '__main__':
    args = PARSER.parse_args()

    cert = apkcert(args.apkfile)

    json.dump(cert, sys.stdout)
