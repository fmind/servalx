#!/usr/bin/env python
# -*- coding: utf-8 -*-
"""Extract and print the permissions of an APK file."""

import argparse
import simplejson as json
import sys

from servalx import apk as Apk

PARSER = argparse.ArgumentParser(description=__doc__)
PARSER.add_argument('apkfile', type=argparse.FileType('r'))


def apkperms(apkfile):
    apk = Apk.APK(apkfile.read())

    return apk.extract_permissions()


if __name__ == '__main__':
    args = PARSER.parse_args()

    perms = apkperms(args.apkfile)

    json.dump(perms, sys.stdout)
